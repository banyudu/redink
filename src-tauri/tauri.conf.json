{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "chat-arxiv",
  "version": "0.1.0",
  "identifier": "com.viper-ml.chat-arxiv",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "chat-arxiv",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "fs": {
      "scope": {
        "allow": ["**"]
      }
    },
    "shell": {
      "open": true
    },
    "sql": {
      "enabled": true
    }
  }
}
